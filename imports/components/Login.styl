.Login
  transform translateY(-100%)
  // transform translateY(-100%) scale(0.7, 0.7)
  transition transform 800ms cubic-bezier(0.19, 1, 0.22, 1)

  fontSizeBig = 15px
  fontSizeMiddle = 14px
  fontSizeSmall = 12px
  borderColor = #afb0b2

  position relative
  background-color white
  width 465px
  box-shadow 0px 0px 45px rgba(0, 0, 0, 0.5)
  border 1px solid borderColor
  border-bottom-left-radius 3px
  border-bottom-right-radius 3px
  padding 25px 30px
  margin -1px auto 0

  font-family defaultFont
  font-size fontSizeSmall

  label
    display block

  input
    border 1px solid borderColor
    border-radius 2px
    &:focus
      outline 3px solid #9fccfa !important

  &__title
    font-weight bold
    font-size fontSizeBig
    padding-bottom 10px

  &__error
    color #ff0000
    font-weight bold
    padding 5px 0 0
    min-height 28px

  &__login
  &__password
    // height 20px
    padding 5px 0
    // overflow hidden

    div
      font-weight bold
      line-height 26px
      width 80px
      text-align right
      padding-right 10px
      float left

    input
      width 320px
      font-size fontSizeMiddle
      padding 3px 5px
      box-sizing border-box
      clear both

  &__agree
    height 20px

    input
      margin-left 80px
      margin-right 10px
      // width 20px
      // height 20px
      float left

    div
      margin-top 3px
      line-height 1.2

    clear both

  &__submit
    margin-top 25px
    margin-bottom 55px
    clear both
    text-align right

    img
      float right
      height 25px
      margin-top 2px
      margin-right 10px
      display none

    input
      font-weight bold
      padding 6px 25px
      background-color #f3f3f3
      float right
      margin-right 4px
      box-shadow 0 1px 2px rgba(black, 0.1)

      &:hover:not(:disabled)
        background-color #f8f8f8
        box-shadow 0 2px 2px rgba(black, 0.1)
